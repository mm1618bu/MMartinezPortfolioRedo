  box-shadow: 0 6px 16px rgba(26, 188, 156, 0.4);
  transform: translateY(-2px);
}

.submit-btn:active {
  transform: translateY(0);
  box-shadow: 0 2px 8px rgba(26, 188, 156, 0.25);
}