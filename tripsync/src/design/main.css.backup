/* Trip Summary Section - MOBILE FIRST */
.trip-summary-section {
  background: linear-gradient(135deg, rgba(0, 0, 139, 0.05), rgba(26, 188, 156, 0.05));
  border: 2px solid var(--primary-color);
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 20px;
}

.trip-summary-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 12px;
}

.trip-info-item {
  display: flex;
  flex-direction: column;
  gap: 5px;
  padding: 12px;
  background: white;
