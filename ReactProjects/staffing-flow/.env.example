# ===========================================
# Frontend Environment Variables (Vite)
# ===========================================
# All frontend variables must be prefixed with VITE_

# API Endpoints
VITE_API_URL=http://localhost:3001/api
VITE_PYTHON_API_URL=http://localhost:8000

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false

# App Configuration
VITE_APP_NAME="Staffing Flow"
VITE_APP_VERSION=0.1.0

# Supabase Configuration (Vite)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Configuration (React/CRA style)
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_supabase_anon_key_here

# =========================================== 
# Node/Express API Environment Variables
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3001
API_HOST=localhost

# Database Configuration (example)
# DATABASE_URL=postgresql://user:password@localhost:5432/staffing_flow
# REDIS_URL=redis://localhost:6379

# API Keys (example)
# EXTERNAL_API_KEY=your_api_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT/Auth Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000              # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100              # Max requests per window
AUTH_RATE_LIMIT_WINDOW_MS=900000         # 15 minutes for auth endpoints
AUTH_RATE_LIMIT_MAX_REQUESTS=5           # Max auth attempts per window
TRUSTED_IPS=                              # Comma-separated IPs to skip rate limiting

# Logging Configuration
LOG_LEVEL=info                            # Log level: error, warn, info, http, debug
LOG_DIR=logs                              # Directory for log files (production)

# ===========================================
# Python API Environment Variables
# ===========================================

# Python Server Configuration
PYTHON_ENV=development
PYTHON_PORT=8000
PYTHON_HOST=0.0.0.0

# Database Configuration (example)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/staffing_flow

# API Keys (example)
# PYTHON_API_KEY=your_api_key_here

# CORS Settings
PYTHON_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
