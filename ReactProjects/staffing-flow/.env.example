# ===========================================
# Frontend Environment Variables (Vite)
# ===========================================
# All frontend variables must be prefixed with VITE_

# API Endpoints
VITE_API_URL=http://localhost:3001
VITE_PYTHON_API_URL=http://localhost:8000

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false

# App Configuration
VITE_APP_NAME="Staffing Flow"
VITE_APP_VERSION=0.1.0

# ===========================================
# Node/Express API Environment Variables
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3001
API_HOST=localhost

# Database Configuration (example)
# DATABASE_URL=postgresql://user:password@localhost:5432/staffing_flow
# REDIS_URL=redis://localhost:6379

# API Keys (example)
# EXTERNAL_API_KEY=your_api_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT/Auth Configuration (example)
# JWT_SECRET=your_jwt_secret_here
# JWT_EXPIRATION=24h

# ===========================================
# Python API Environment Variables
# ===========================================

# Python Server Configuration
PYTHON_ENV=development
PYTHON_PORT=8000
PYTHON_HOST=0.0.0.0

# Database Configuration (example)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/staffing_flow

# API Keys (example)
# PYTHON_API_KEY=your_api_key_here

# CORS Settings
PYTHON_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
